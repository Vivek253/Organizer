<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/x9"
        android:tag="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="   Dashboard"
                android:textSize="30dp"
                android:textStyle="italic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending : "
                android:layout_marginLeft="130dp"
                android:layout_marginTop="5dp"
                android:textSize="30dp"
                android:longClickable="true"

                android:textStyle="italic"/>
            <TextView
                android:id="@+id/it"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:textSize="30dp"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp">

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal">

                <RadioButton
                    android:text = "All"
                    android:id="@+id/rb1"
                    android:clickable="true"
                    android:onClick="horizontalDisplay"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#ffffff"

                    />

                <RadioButton
                    android:checked="true"
                    android:id="@+id/rb2"
                    android:clickable="true"
                    android:onClick="horizontalDisplay"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#f44141" />

                <RadioButton
                    android:id="@+id/rb3"
                    android:clickable="true"
                    android:onClick="horizontalDisplay"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#f4c242"

                    />

                <RadioButton
                    android:id="@+id/rb4"
                    android:clickable="true"
                    android:onClick="horizontalDisplay"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#23af0e" />

                <RadioButton
                    android:id="@+id/rb5"
                    android:clickable="true"
                    android:onClick="horizontalDisplay"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#42b9f4" />

                <RadioButton
                    android:id="@+id/rb6"
                    android:clickable="true"
                    android:onClick="horizontalDisplay"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#ea7ca2" />
                <RadioButton
                    android:id="@+id/rb7"
                    android:clickable="true"
                    android:onClick="horizontalDisplay"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="#f48835" />


            </RadioGroup>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/x1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">


        </LinearLayout>

    </LinearLayout>

</ScrollView>